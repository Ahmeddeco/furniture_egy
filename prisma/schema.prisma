generator zod {
  provider                         = "zod-prisma-types"
  output                           = "../generated"
  useMultipleFiles                 = true
  writeNullishInModelTypes         = true
  createModelTypes                 = true
  // default is true
  writeBarrelFiles                 = false
  // default is true
  createInputTypes                 = false
  // default is true
  addInputTypeValidation           = false
  // default is true
  addIncludeType                   = false
  // default is true
  addSelectType                    = false
  // default is true
  validateWhereUniqueInput         = false
  // default is true
  createOptionalDefaultValuesTypes = false
  // default is false
  createRelationValuesTypes        = false
  // default is false
  createPartialTypes               = false
  // default is false
  useDefaultValidators             = false
  // default is true
  coerceDate                       = false
  // default is true
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"] //It tells Prisma to get the engine for the new Vercel/AWS Lambda runtime.
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  seller
  user
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@id([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique // <--- THIS IS THE CRITICAL LINE
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  image         String?
  mobile        String?
  country       String?
  state         String?
  city          String?
  accounts      Account[]
  sessions      Session[]
  Authenticator Authenticator[]
  role          Role            @default(user)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  factories     Factory[]
  products      Product[]
  Review        Review[]
  orders        Order[]
  sellerLedgers SellerLedger[]
}

model Factory {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  phone         String?        @unique
  country       String?
  state         String?
  city          String?
  logo          String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  owner         User?          @relation(fields: [ownerId], references: [id])
  ownerId       String?
  models        Model[]
  products      Product[]
  ledgerEntries SellerLedger[]
}

model Model {
  id        String    @id @default(uuid())
  title     String
  factory   Factory   @relation(fields: [factoryId], references: [id])
  factoryId String
  products  Product[]
  style     Style     @relation(fields: [styleId], references: [id])
  styleId   String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Style {
  id          String    @id @default(uuid())
  title       String    @unique
  description String?
  product     Product[]
  model       Model[]
}

model Product {
  id          String      @id @default(uuid())
  title       String
  price       Float       @default(0)
  discount    Float       @default(0)
  quantity    Int         @default(0)
  mainImage   String
  images      String[]
  description String
  review      Review[]
  model       Model       @relation(fields: [modelId], references: [id])
  factory     Factory     @relation(fields: [factoryId], references: [id])
  factoryId   String
  style       Style[]
  seller      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  modelId     String
  orderItems  OrderItem[]

  @@index([title])
}

model Review {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  review    String
  rating    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id        String      @id @default(uuid())
  createdAt DateTime    @default(now())
  status    OrderStatus @default(pending)
  total     Int
  user      User        @relation(fields: [userId], references: [id])
  items     OrderItem[]
  userId    String
}

model OrderItem {
  id       String  @id @default(uuid())
  quantity Int
  price    Int
  order    Order   @relation(fields: [orderId], references: [id])
  product  Product @relation(fields: [productId], references: [id])

  orderId     String
  productId   String
  ledgerEntry SellerLedger?
}

enum OrderStatus {
  pending
  paid
  shipped
  completed
  cancelled
}

enum PaymentMethod {
  credit
  paypal
  cash
}

enum PaymentStatus {
  pending
  success
  failed
}

// This model tracks every transaction owed to a seller
model SellerLedger {
  id          String        @id @default(uuid())
  amount      Int
  status      PaymentStatus @default(pending)
  method      PaymentMethod
  seller      User          @relation(fields: [sellerId], references: [id])
  sellerId    String
  orderItem   OrderItem     @relation(fields: [orderItemId], references: [id])
  orderItemId String        @unique
  factory     Factory?      @relation(fields: [factoryId], references: [id])
  factoryId   String?
  createdAt   DateTime      @default(now())
}
